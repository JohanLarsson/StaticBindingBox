<Window x:Class="StaticBindingBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StaticBindingBox"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="525"
        Height="350"
        mc:Ignorable="d">
    <StackPanel>
        <Label Content="{x:Static local:Foo.Value}" />
        <Label Content="{Binding Source={x:Static local:Foo.Value}}" />
        <RepeatButton Click="OnIncreaseClick" Content="Increment" />
    </StackPanel>
</Window>
